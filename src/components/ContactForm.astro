---
import type { TranslationFunction } from '../i18n/translations';

interface Props {
  t: TranslationFunction;
}

const { t } = Astro.props;
---

<section id="contact" class="py-20 sm:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      <!-- Left: Info -->
      <div>
        <h2 class="text-3xl sm:text-4xl font-bold text-secondary-900">
          {t('contact.title')}
        </h2>
        <p class="mt-4 text-lg text-secondary-600">
          {t('contact.subtitle')}
        </p>

        <!-- Contact info -->
        <div class="mt-10 space-y-6">
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-secondary-900">{t('contact.email.label')}</h3>
              <p class="text-secondary-600">sales@polussolution.com</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-secondary-900">{t('contact.location.title')}</h3>
              <p class="text-secondary-600">{t('contact.location.description')}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: Form -->
      <div class="bg-secondary-50 rounded-2xl p-8">
        <form id="contact-form" class="space-y-6">
          <!-- Honeypot field (hidden, for spam protection) -->
          <input type="text" name="botcheck" class="hidden" tabindex="-1" autocomplete="off" />

          <div>
            <label for="email" class="block text-sm font-medium text-secondary-700 mb-2">
              {t('contact.email')} *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-secondary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
              placeholder={t('contact.form.email.placeholder')}
            />
          </div>

          <div>
            <label for="company" class="block text-sm font-medium text-secondary-700 mb-2">
              {t('contact.company')} *
            </label>
            <input
              type="text"
              id="company"
              name="company"
              required
              class="w-full px-4 py-3 border border-secondary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
              placeholder={t('contact.form.company.placeholder')}
            />
          </div>

          <div>
            <label for="size" class="block text-sm font-medium text-secondary-700 mb-2">
              {t('contact.size')}
            </label>
            <select
              id="size"
              name="size"
              class="w-full px-4 py-3 border border-secondary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all bg-white"
            >
              <option value="">{t('contact.size')}</option>
              <option value="1-10">{t('contact.size.small')}</option>
              <option value="11-50">{t('contact.size.medium')}</option>
              <option value="51-200">{t('contact.size.large')}</option>
              <option value="200+">{t('contact.size.enterprise')}</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-secondary-700 mb-2">
              {t('contact.message')}
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-3 border border-secondary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all resize-none"
              placeholder={t('contact.form.message.placeholder')}
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full py-4 px-6 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          >
            {t('contact.submit')}
          </button>

          <!-- Status messages -->
          <div id="form-success" class="hidden p-4 bg-green-100 text-green-700 rounded-xl text-center">
            {t('contact.success')}
          </div>
          <div id="form-error" class="hidden p-4 bg-red-100 text-red-700 rounded-xl text-center">
            {t('contact.error')}
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement | null;
  const successMsg = document.getElementById('form-success');
  const errorMsg = document.getElementById('form-error');
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement | null;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);

    // Check honeypot
    if (formData.get('botcheck')) {
      return; // Bot detected
    }

    // Disable submit button
    if (submitBtn) {
      submitBtn.disabled = true;
      const originalText = submitBtn.textContent || '';
      submitBtn.textContent = originalText.includes('Send') ? 'Sending...' : 'Enviando...';
    }

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        body: formData
      });

      const result = await response.json() as { success: boolean; message?: string };

      if (response.ok && result.success) {
        form.reset();
        successMsg?.classList.remove('hidden');
        errorMsg?.classList.add('hidden');
        setTimeout(() => successMsg?.classList.add('hidden'), 5000);
      } else {
        throw new Error(result.message || 'Failed to submit');
      }
    } catch (error) {
      console.error('Form submission error:', error);
      errorMsg?.classList.remove('hidden');
      successMsg?.classList.add('hidden');
      setTimeout(() => errorMsg?.classList.add('hidden'), 5000);
    } finally {
      // Re-enable submit button
      if (submitBtn) {
        submitBtn.disabled = false;
        const currentText = submitBtn.textContent || '';
        submitBtn.textContent = currentText.includes('Sending') ? 'Send Message' : currentText.includes('Enviando') ? 'Enviar Mensaje' : 'Enviar Mensagem';
      }
    }
  });
</script>
