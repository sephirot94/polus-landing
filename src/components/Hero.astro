---
import type { TranslationFunction } from '../i18n/translations';

interface Props {
  t: TranslationFunction;
}

const { t } = Astro.props;
---

<section class="relative pt-24 pb-16 sm:pt-32 sm:pb-24 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-secondary-50"></div>

  <!-- Decorative elements -->
  <div class="absolute top-20 left-10 w-72 h-72 bg-primary-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-pulse"></div>
  <div class="absolute bottom-10 right-10 w-72 h-72 bg-secondary-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-pulse" style="animation-delay: 1s;"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-1.5 mb-6 bg-primary-100 text-primary-700 text-sm font-medium rounded-full">
        <span class="w-2 h-2 bg-primary-500 rounded-full mr-2 animate-pulse"></span>
        Optimizado para LATAM
      </div>

      <!-- Heading -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-secondary-900 tracking-tight">
        {t('hero.title')}
        <span class="block text-primary-600">{t('hero.subtitle')}</span>
      </h1>

      <!-- Description -->
      <p class="mt-6 max-w-2xl mx-auto text-lg sm:text-xl text-secondary-600">
        {t('hero.description')}
      </p>

      <!-- CTA Buttons -->
      <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="#contact"
          class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-all shadow-lg shadow-primary-500/25 hover:shadow-xl hover:shadow-primary-500/30"
        >
          {t('hero.cta.primary')}
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a
          href="#features"
          class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 bg-white text-secondary-700 font-semibold rounded-xl border border-secondary-200 hover:border-primary-300 hover:text-primary-600 transition-all"
        >
          {t('hero.cta.secondary')}
        </a>
      </div>

      <!-- Integration logos -->
      <div class="mt-16">
        <p class="text-sm text-secondary-500 mb-6">Integrado con las plataformas que ya usa</p>
        <div class="flex flex-wrap items-center justify-center gap-8 opacity-60">
          <!-- WhatsApp -->
          <div class="flex items-center space-x-2 text-secondary-400">
            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            <span class="font-medium">WhatsApp</span>
          </div>
          <!-- Zendesk -->
          <div class="flex items-center space-x-2 text-secondary-400">
            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 18.75v4.5H9.75L24 18.75zM0 9.75v4.5h14.25L0 9.75zM24 9.75L14.25 0v4.5l4.5 4.5 5.25.75z"/>
            </svg>
            <span class="font-medium">Zendesk</span>
          </div>
          <!-- Freshdesk -->
          <div class="flex items-center space-x-2 text-secondary-400">
            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 4.8a7.2 7.2 0 110 14.4 7.2 7.2 0 010-14.4z"/>
            </svg>
            <span class="font-medium">Freshdesk</span>
          </div>
          <!-- Intercom -->
          <div class="flex items-center space-x-2 text-secondary-400">
            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12c0 2.625.846 5.059 2.284 7.034L.653 23.347l4.313-1.631A11.95 11.95 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm-1.5 7.5h3v9h-3v-9zm0-3h3v2h-3v-2z"/>
            </svg>
            <span class="font-medium">Intercom</span>
          </div>
          <!-- Email -->
          <div class="flex items-center space-x-2 text-secondary-400">
            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span class="font-medium">Email</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
